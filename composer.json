{
    "name": "hamrocdn/sdk",
    "description": "SDK for HamroCDN - A CDN service provider",
    "homepage": "https://hamrocdn.com",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "cdn",
        "sdk",
        "hamrocdn",
        "php",
        "laravel"
    ],
    "autoload": {
        "psr-4": {
            "HamroCDN\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HamroCDN\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "achyutkneupane",
            "email": "achyutkneupane@gmail.com",
            "homepage": "https://achyut.com.np",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.10",
        "nesbot/carbon": "^3.10"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.2"
    },
    "scripts": {
        "lint": [
            "rector",
            "pint",
            "phpstan"
        ],
        "test:type-coverage": "pest",
        "test:lint": [
            "pint --test"
        ],
        "test:unit": "# pest --parallel --coverage --min=90",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
